# =============================================================================
# EDC Advanced Scanners - Environment Configuration
# =============================================================================
# Copy this file to .env and configure with your actual values
# NEVER commit the .env file to version control
# =============================================================================

# -----------------------------------------------------------------------------
# EDC Advanced Scanners Installation
# -----------------------------------------------------------------------------
# Path to the Advanced Scanners Application home directory
SCANNERS_HOME=/opt/informatica/edc/10.5.x/services/CatalogService/AdvancedScannersApplication/app

# -----------------------------------------------------------------------------
# EDC Server Connection
# -----------------------------------------------------------------------------
# EDC Catalog Service URL (include port if non-standard)
EDC_SERVER=https://edc-server.example.com:9085

# Authentication type: Native, LDAP, or SAML
EDC_AUTH_TYPE=Native

# EDC service account credentials
# Recommended: Use a dedicated service account with minimal required permissions
EDC_USER=edc_scanner_user
EDC_PASSWORD=your_secure_password_here

# -----------------------------------------------------------------------------
# Logging Configuration
# -----------------------------------------------------------------------------
# Directory for scanner execution logs
LOG_DIR=/var/log/edc-scanners

# -----------------------------------------------------------------------------
# Job Monitoring Settings
# -----------------------------------------------------------------------------
# Maximum time to wait for a single scanner job (in seconds)
# Default: 21600 (6 hours)
MAX_JOB_WAIT_TIME=21600

# Interval between status checks (in seconds)
# Default: 30
STATUS_CHECK_INTERVAL=30

# -----------------------------------------------------------------------------
# Scanner Definitions
# -----------------------------------------------------------------------------
# Base paths for scanner configurations in EDC workspace
# These correspond to scanner configuration folders

# Oracle Stored Procedures Scanner Base Path
ORACLE_SP_SCANNER_BASE=DataHubStoredProcedures

# Power BI Scanner Base Path
POWERBI_SCANNER_BASE=Power_Bi

# -----------------------------------------------------------------------------
# Scanner Names (customize based on your EDC configuration)
# -----------------------------------------------------------------------------
# Comma-separated list of Oracle SP scanners to run (in order)
ORACLE_SP_SCANNERS=SCHEMA1_DB1,SCHEMA2_DB1,SCHEMA3_PKG,SCHEMA4_SP

# Comma-separated list of Power BI scanners to run (in order)
POWERBI_SCANNERS=PowerBi_Workspace1

# -----------------------------------------------------------------------------
# Execution Options
# -----------------------------------------------------------------------------
# Stop execution on first failure (true/false)
STOP_ON_FAILURE=true

# Send email notifications on completion/failure (true/false)
SEND_NOTIFICATIONS=false

# Email recipients for notifications (comma-separated)
NOTIFICATION_EMAILS=admin@example.com

# -----------------------------------------------------------------------------
# Optional: Proxy Settings (if required)
# -----------------------------------------------------------------------------
# HTTP_PROXY=http://proxy.example.com:8080
# HTTPS_PROXY=http://proxy.example.com:8080
# NO_PROXY=localhost,127.0.0.1,.example.com
